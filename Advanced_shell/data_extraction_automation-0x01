#!/bin/bash

# Ensure data.json exists
if [ ! -f data.json ]; then
  echo "data.json not found. Please run the fetch script first."
  exit 1
fi

# Extract data using jq
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')  # Capitalize first letter
height=$(jq -r '.height' data.json | awk '{ printf "%.1f", $1 / 10 }')  # Convert dm to m
weight=$(jq -r '.weight' data.json | awk '{ printf "%d", $1 / 10 }')  # Convert hg to kg
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')  # Capitalize first letter

# Print formatted string
echo "$name is of type $type, weighs ${weight}kg, and is ${height}m tall."

